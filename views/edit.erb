<form method="post" action="/animals/<%= @animal.id %>">

  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @animal.name %>"
  />

  <label for="admin_date-field">Name:</label>
  <input
  type="text"
  name="name"
  id="admin_date-field"
  value="<%= @animal.admin_date %>"
  />


  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <option value="1" <%= "selected" if @animal.house_id == "1" %> >Gryffindor</option>
    <option value="2" <%= "selected" if @animal.house_id == "2" %> >Hufflepuff</option>
    <option value="3" <%= "selected" if @animal.house_id == "3" %> >Ravenclaw</option>
  </select>


  <label for="age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  value="<%= @student.age() %>"
  />

  <input type='submit' value="Edit Information">
</form> %>
